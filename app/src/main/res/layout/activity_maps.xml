<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UserMapActivity" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dimens_25dp"
        android:layout_marginEnd="@dimen/dimens_25dp"
        android:layout_marginBottom="@dimen/dimens_25dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMinimum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="@string/lbl_proximity_radius"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.slider.Slider
                android:id="@+id/continuousSlider"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/continuousSlider"
                android:stepSize="5"
                app:layout_constraintStart_toEndOf="@id/tvMinimum"
                app:layout_constraintTop_toTopOf="parent"
                map:labelBehavior="floating"
                map:labelStyle="@style/LabelTip"
                map:thumbColor="@color/com_facebook_blue"
                map:thumbRadius="@dimen/dimens_8dp"
                map:tickColor="@color/grey"
                map:trackColorActive="@color/com_facebook_blue"
                map:trackColorInactive="@color/grey_dull"
                map:trackHeight="@dimen/dimens_7dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUserCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_7dp"
            android:background="@drawable/border_with_rounded_corner"
            android:fontFamily="@font/bold"
            android:layout_gravity="center"
            android:textColor="@color/purple_500"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnSnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:elevation="5dp"
            android:enabled="false"
            android:fontFamily="@font/medium"
            android:letterSpacing="0.1"
            android:text="@string/send_to_all"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>

