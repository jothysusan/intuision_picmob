<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_5"
    android:layout_marginTop="@dimen/dimens_2"
    android:layout_marginEnd="@dimen/dimens_10"
    android:layout_marginBottom="@dimen/dimens_10"
    app:cardCornerRadius="@dimen/dimens_5"
    app:cardElevation="@dimen/dimens_5"
    app:contentPadding="@dimen/dimens_2">

    <LinearLayout
        android:id="@+id/user_vicinity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimens_5"
            android:layout_weight=".8"
            android:fontFamily="@font/medium"
            android:gravity="center|start"
            android:letterSpacing="0.05"
            android:text="Steve Rogers"
            android:textColor="@color/Activite"
            android:textSize="@dimen/text_size_12" />

        <CheckBox
            android:id="@+id/tbUserSelect"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:minWidth="@dimen/dimens_0"
            android:minHeight="@dimen/dimens_0"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tbRemoveSelect"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_10"
            android:layout_weight=".2"
            android:letterSpacing="0.05"
            android:text="--"
            android:textColor="@color/Activite"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>