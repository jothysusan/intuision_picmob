<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutDownloadDelete"
        android:layout_margin="@dimen/dimens_20"
        app:cardCornerRadius="@dimen/dimens_5"
        app:cardElevation="@dimen/dimens_8dp"
        app:contentPadding="@dimen/dimens_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0"
                android:layout_weight="1">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dimens_10"
                    app:controller_layout_id="@layout/exo_playback_control_view">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />
                </com.google.android.exoplayer2.ui.PlayerView>

                <ImageView
                    android:id="@+id/imgThumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimens_10"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:paddingBottom="@dimen/dimens_5"
                    android:text="Private"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimens_5"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:letterSpacing="0.05"
                        android:padding="@dimen/dimens_5"
                        android:text="Shared by sounderrajan17"
                        android:textColor="@color/Activite"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="@dimen/dimens_0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:gravity="end"
                        android:letterSpacing="0.05"
                        android:padding="@dimen/dimens_5"
                        android:text="08-Feb-2021 12:30 PM"
                        android:textColor="@color/Activite"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:letterSpacing="0.05"
                    android:paddingBottom="@dimen/dimens_5"
                    android:text="Message"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_13" />


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_white"
                    android:minHeight="@dimen/dimens_80">

                    <TextView
                        android:id="@+id/tvMsg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/regular"
                        android:letterSpacing="0.05"
                        android:padding="@dimen/dimens_10"
                        android:scrollHorizontally="true"
                        android:text="qfuhoqwfuofqhqfuhqfofqiiuqfgqfh
                            oqfwnofibifqhqf"
                        android:textColor="@color/Activite"
                        android:textSize="12sp" />

                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutDownloadDelete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_above="@id/layAction"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginEnd="@dimen/dimens_20"
        android:layout_marginBottom="@dimen/dimens_10"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/medium"
            android:text="@string/download"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimens_10"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/medium"
            android:letterSpacing="0.1"
            android:text="@string/delete"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginEnd="@dimen/dimens_20"
        android:layout_marginBottom="@dimen/dimens_15"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimens_5"
        android:paddingBottom="@dimen/dimens_5">

        <Button
            android:id="@+id/btnIgnore"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dimens_10"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/medium"
            android:letterSpacing="0.1"
            android:text="@string/ignore"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/medium"
            android:letterSpacing="0.1"
            android:text="@string/make_public"
            android:textColor="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tbPublicityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/tbPubilicity"
                style="@style/toggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_selector"
                android:enabled="false"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tbPublicityView"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="@dimen/dimens_0"
                app:layout_constraintBottom_toBottomOf="@id/tbPubilicity"
                app:layout_constraintEnd_toEndOf="@id/tbPubilicity"
                app:layout_constraintStart_toStartOf="@id/tbPubilicity"
                app:layout_constraintTop_toTopOf="@id/tbPubilicity" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</RelativeLayout>