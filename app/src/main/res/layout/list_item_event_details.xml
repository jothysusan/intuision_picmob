<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_5"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimens_5"
    app:cardElevation="@dimen/dimens_5"
    app:contentPadding="@dimen/dimens_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.picmob.android.utils.widgets.ShapeImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_movie"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeDrawable="@drawable/chat_image_shape" />

        <ImageView
            android:id="@+id/videoPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0"
            android:background="@drawable/round_corner_placeholder_shape"
            android:scaleType="center"
            android:src="@drawable/exo_ic_play_circle_filled"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:visibility="gone"
            android:letterSpacing="0.05"
            android:padding="@dimen/dimens_5"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/imgView"
            tools:text="Image1" />

        <CheckBox
            android:id="@+id/myCheckBox"
            android:minWidth="@dimen/dimens_0"
            android:minHeight="@dimen/dimens_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUsername" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>