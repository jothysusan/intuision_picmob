    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColorPrimary">@color/purple_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>
        <item name="itemTextColor">@color/purple_500</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:width">25dp</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:actionMenuTextColor">@color/purple_500</item>
        <item name="fontFamily">@font/regular</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MenuItemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/purple_500</item>
        <item name="actionMenuTextColor">@color/purple_500</item>
        <item name="android:actionMenuTextColor">@color/purple_500</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/regular</item>
    </style>
    <style name="Theme.SingnalRAndroid.Fullscreen" parent="Theme.SingnalRAndroid">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.SingnalRAndroid.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SingnalRAndroid.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
    </style>




</resources>