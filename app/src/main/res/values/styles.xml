<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">MAKE PRIVATE</item>
        <item name="android:textOff">MAKE PUBLIC</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0.08</item>
    </style>


    <style name="toggleButtonUser"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">UNSELECT</item>
        <item name="android:textOff">SELECT</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="toggleButtonSelectAll"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">UNSELECT ALL</item>
        <item name="android:textOff">SELECT ALL</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="toggleButtonUnselectAll"  parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">UNSELECT ALL</item>
        <item name="android:textOff">UNSELECT ALL</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0.08</item>
    </style>
    <style name="Widget.Theme.SingnalRAndroid.ActionBar.Fullscreen"
        parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.SingnalRAndroid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>